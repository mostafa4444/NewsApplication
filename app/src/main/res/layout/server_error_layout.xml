<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:visibility="visible"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/no_wifi"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="@dimen/dp100w"
        android:layout_height="@dimen/dp100h"
        app:srcCompat="@drawable/ic_server_error"/>

    <TextView
        android:layout_marginTop="@dimen/dp10h"
        android:layout_marginStart="@dimen/dp20w"
        android:layout_marginEnd="@dimen/dp20h"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/server_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14"/>

</LinearLayout>

